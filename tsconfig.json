{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },

  "include": ["./types/**/*.ts", ".", "**/*.ts"],
  "exclude": ["./dist"],
  "ts-node": {
    "ignoreDiagnostics": [2345]
  }
}
